import SalesList from '@/components/ecommerce/SalesList';

const metadata = {
  title: 'Ofertas',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero tagline="Oportunidades">
    <Fragment slot="title">
      Ofertas
    </Fragment>

    <Fragment slot="subtitle">
      Importantes ofertas en nuestros productos.
    </Fragment>
  </Hero>

  <!---------- Product List --------------------------->

  <SalesList></SalesList>

  <!-- Features2 Widget ************** -->

  <Features2
    title="Acercate a nuestro local"
    subtitle="Las ofertas se encuentran disponibles en nuestro local en calle Padre Grella 1515, de la ciudad de ParanÃ¡. Las promociones, ofertas y descuentos son al contado efectivo."
  >

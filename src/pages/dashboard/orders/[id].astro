---
import Layout from '@/layouts/PageLayout.astro';
import { Package } from 'lucide-react';
import type { Order } from '@/types/order';

const metadata = {
  title: 'Detalle de Pedido - Simplex',
  ignoreTitleTemplate: true,
};

const pb = Astro.locals.pb;
const { user, isLoggedIn } = Astro.locals;
const { id } = Astro.params;

if (!isLoggedIn) {
  return Astro.redirect('/auth/login');
}

// Validar que el ID existe
if (!id) {
  return Astro.redirect('/dashboard/orders');
}

// Obtener la orden
let order: Order | null = null;
try {
  order = await pb.collection('orders').getOne<Order>(id);

  // Verificar que la orden pertenezca al usuario
  if (order && order.user !== user.id && !user.isAdmin) {
    return Astro.redirect('/dashboard/orders');
  }
} catch (error) {
  return Astro.redirect('/dashboard/orders');
}

// Si no hay orden, redirigir
if (!order) {
  return Astro.redirect('/dashboard/orders');
}

// Función para formatear estado
function getOrderStatus(status: string) {
  const statusConfig = {
    pending: { color: 'bg-amber-100 text-amber-800', text: 'Pendiente', desc: 'Tu pedido está siendo procesado.' },
    processing: { color: 'bg-blue-100 text-blue-800', text: 'Procesando', desc: 'Estamos preparando tu pedido.' },
    shipped: { color: 'bg-purple-100 text-purple-800', text: 'Enviado', desc: 'Tu pedido está en camino.' },
    delivered: { color: 'bg-green-100 text-green-800', text: 'Entregado', desc: 'Pedido entregado exitosamente.' },
    cancelled: { color: 'bg-red-100 text-red-800', text: 'Cancelado', desc: 'Este pedido ha sido cancelado.' },
  };

  return statusConfig[status as keyof typeof statusConfig] || statusConfig.pending;
}
---

<Layout metadata={metadata}>
  <div class="max-w-4xl mx-auto px-4 py-10">
    <div class="mb-8">
      <a href="/dashboard/orders" class="text-sm text-primary hover:underline inline-flex items-center gap-1 mb-4">
        ← Volver a mis pedidos
      </a>
      <h1 class="text-3xl font-bold">Pedido #{order.id.substring(0, 8).toUpperCase()}</h1>
      <p class="text-muted-foreground mt-2">
        Realizado el {
          new Date(order.created).toLocaleDateString('es-ES', {
            day: 'numeric',
            month: 'long',
            year: 'numeric',
            hour: '2-digit',
            minute: '2-digit',
          })
        }
      </p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
      <div class="lg:col-span-2 space-y-6">
        {/* Productos */}
        <div class="border rounded-lg p-6">
          <h2 class="text-xl font-semibold mb-4">Productos</h2>
          <div class="space-y-4">
            {
              Array.isArray(order.items) &&
                order.items.map((item) => (
                  <div class="flex items-center gap-4 py-4 border-b last:border-0">
                    <div class="w-16 h-16 bg-muted rounded flex items-center justify-center">
                      <Package className="h-8 w-8 text-muted-foreground" />
                    </div>
                    <div class="flex-1">
                      <h3 class="font-medium">{item.name}</h3>
                      <p class="text-sm text-muted-foreground">
                        {item.item} • Talla: {item.size} • Cantidad: {item.quantity}
                      </p>
                    </div>
                    <div class="text-right">
                      <p class="font-bold">${(item.discountedPrice * item.quantity).toFixed(2)}</p>
                      <p class="text-sm text-muted-foreground">${item.discountedPrice} c/u</p>
                    </div>
                  </div>
                ))
            }
          </div>
        </div>

        {/* Información del pedido */}
        <div class="border rounded-lg p-6">
          <h2 class="text-xl font-semibold mb-4">Información del pedido</h2>
          <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <dt class="text-sm text-muted-foreground">ID del pedido</dt>
              <dd class="font-mono text-sm">{order.id}</dd>
            </div>
            <div>
              <dt class="text-sm text-muted-foreground">Fecha de creación</dt>
              <dd>{new Date(order.created).toLocaleDateString()}</dd>
            </div>
            <div>
              <dt class="text-sm text-muted-foreground">Última actualización</dt>
              <dd>{new Date(order.updated).toLocaleDateString()}</dd>
            </div>
          </dl>
        </div>
      </div>

      {/* Resumen */}
      <div class="space-y-6">
        <div class="border rounded-lg p-6">
          <h2 class="text-xl font-semibold mb-4">Resumen</h2>
          <div class="space-y-3">
            <div class="flex justify-between">
              <span>Subtotal</span>
              <span>${((order?.total ?? 0) - (order?.shipping_cost ?? 0)).toFixed(2)}</span>
            </div>
            <div class="flex justify-between">
              <span>Envío</span>
              <span>${order.shipping_cost?.toFixed(2) || '0.00'}</span>
            </div>
            <div class="border-t pt-3 flex justify-between text-lg font-bold">
              <span>Total</span>
              <span>${order.total?.toFixed(2) || '0.00'}</span>
            </div>
          </div>
        </div>

        <div class="border rounded-lg p-6">
          <h2 class="text-xl font-semibold mb-4">Estado</h2>
          <div class="space-y-3">
            {
              (() => {
                const status = getOrderStatus(order.status);
                return (
                  <>
                    <span class={`px-3 py-1 rounded-full text-sm font-medium ${status.color}`}>{status.text}</span>
                    <p class="text-sm text-muted-foreground">{status.desc}</p>
                  </>
                );
              })()
            }
          </div>
        </div>

        <div class="border rounded-lg p-6">
          <h2 class="text-xl font-semibold mb-4">Acciones</h2>
          <div class="space-y-3">
            <button
              class="w-full border border-input bg-background hover:bg-gray-400 hover:text-accent-foreground h-10 px-4 py-2 rounded-md"
              onclick="window.print()"
            >
              Imprimir comprobante
            </button>
            <!-- {order.status === 'pending' && (
              <Button variant="destructive" className="w-full">
                Cancelar pedido
              </Button>
            )} -->
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>

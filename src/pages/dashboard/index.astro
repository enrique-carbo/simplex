---
import Layout from '@/layouts/PageLayout.astro';
import DashboardShell from '@/components/dashboard/DashboardShell.tsx';
import ResendVerification from '@/components/dashboard/ResendVerification';
import LogoutButton from '@/components/dashboard/LogoutButton';
import { User } from 'lucide-react'

const metadata = {
  title: 'Mi Perfil - Simplex',
  ignoreTitleTemplate: true,
};

const { user, isLoggedIn } = Astro.locals;

// Protección de ruta (mínimo CPU)
if (!isLoggedIn) {
  return Astro.redirect('/auth/login');
}

// Solo datos ABSOLUTAMENTE necesarios en SSR
const isVerified = user?.verified === true;
---

<Layout metadata={metadata}>
  <div class="max-w-4xl mx-auto px-4 py-6 space-y-6">
    
    {/* Banner de verificación - Solo si no verificado */}
    {!isVerified && (
      <ResendVerification client:load />
    )}

    {/* Layout básico - Skeleton de la página */}
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      
      {/* Columna izquierda - Perfil básico */}
      <div class="md:col-span-1">
        <div class="border rounded-lg p-6 text-center space-y-4">
          <div class="mx-auto w-20 h-20 flex items-center justify-center">
            <User className="h-10 w-10" />
          </div>
          <div>
            <h2 class="font-bold text-lg leading-tight truncate">
              {user.nombre || 'Usuario'}
            </h2>
            <p class="text-sm text-muted-foreground truncate">{user.email}</p>
          </div>
          <div>
            <span class={`px-3 py-1 rounded-full text-xs font-medium ${isVerified ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800'}`}>
              {isVerified ? 'Verificado' : 'Pendiente'}
            </span>
          </div>
          
          <div class="pt-4 border-t">
            <LogoutButton client:load />
          </div>
        </div>
      </div>

      {/* Columna derecha - Contenido cargado en cliente */}
      <div class="md:col-span-2 space-y-6">
        
        {/* Dashboard dinámico - TODO carga en cliente */}
        <DashboardShell userId={user.id} client:load />
        
      </div>
    </div>
  </div>
</Layout>
---
import Layout from '@/layouts/PageLayout.astro';
import { Button } from '@/components/ui/button';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '@/components/ui/card';
import { Badge } from '@/components/ui/badge';
import { Separator } from '@/components/ui/separator';
import { User, Mail, Calendar, ShieldCheck, LogOut } from 'lucide-react';

const metadata = {
  title: 'Mi Perfil - Simplex',
  ignoreTitleTemplate: true,
};

// Protección de ruta
if (!Astro.locals.pb.authStore.isValid) {
  return Astro.redirect('/auth/login');
}

const user = Astro.locals.pb.authStore.record!;
const isVerified = user.verified;
---

<Layout metadata={metadata}>
  <div class="max-w-4xl mx-auto px-4 py-10 space-y-6">
    
    { !isVerified && (
      <div class="bg-amber-50 border border-amber-200 rounded-lg p-4 flex items-center justify-between shadow-sm">
        <div class="flex items-center gap-3">
          <div class="bg-amber-100 p-2 rounded-full">
            <Mail className="h-5 w-5 text-amber-600" />
          </div>
          <div>
            <p class="text-sm font-medium text-amber-800">Verifica tu correo electrónico</p>
            <p class="text-xs text-amber-700">Revisa tu bandeja de entrada para activar todas las funciones de tu cuenta.</p>
          </div>
        </div>
        <Button variant="outline" size="sm" id="resend-btn" className="border-amber-300 hover:bg-amber-100 text-amber-800">
          Reenviar email
        </Button>
      </div>
    )}

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <Card className="md:col-span-1">
        <CardContent className="pt-6 text-center space-y-4">
          <div class="mx-auto w-24 h-24 bg-primary/10 rounded-full flex items-center justify-center">
            <User className="h-12 w-12 text-primary" />
          </div>
          <div>
            <h2 class="font-bold text-lg leading-tight">{user.name || 'Usuario Simplex'}</h2>
            <p class="text-sm text-muted-foreground">{user.email}</p>
          </div>
          <Badge variant={isVerified ? "default" : "secondary"} className={isVerified ? "bg-green-500 hover:bg-green-600" : ""}>
            {isVerified ? 'Verificado' : 'Pendiente'}
          </Badge>
          
          <Separator />
          
          <form method="POST" action="/api/auth/logout">
            <Button type="submit" variant="ghost" className="w-full text-destructive hover:bg-destructive/5 gap-2">
              <LogOut className="h-4 w-4" />
              Cerrar Sesión
            </Button>
          </form>
        </CardContent>
      </Card>

      <Card className="md:col-span-2">
        <CardHeader>
          <CardTitle>Información de la cuenta</CardTitle>
          <CardDescription>Gestione sus datos personales y preferencias.</CardDescription>
        </CardHeader>
        <CardContent className="space-y-6">
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
            <div class="space-y-1">
              <p class="text-xs font-medium text-muted-foreground uppercase">ID de Cliente</p>
              <p class="text-sm font-mono bg-muted p-1 rounded inline-block">{user.id}</p>
            </div>
            <div class="space-y-1">
              <p class="text-xs font-medium text-muted-foreground uppercase flex items-center gap-1">
                <Calendar className="h-3 w-3" /> Miembro desde
              </p>
              <p class="text-sm">{new Date(user.created).toLocaleDateString('es-ES', { day: 'numeric', month: 'long', year: 'numeric' })}</p>
            </div>
          </div>

          <Separator />

          <div class="space-y-3">
             <h3 class="text-sm font-semibold flex items-center gap-2">
               <ShieldCheck className="h-4 w-4 text-primary" /> Seguridad
             </h3>
             <p class="text-xs text-muted-foreground">Su contraseña fue actualizada por última vez el {new Date(user.updated).toLocaleDateString()}.</p>
             <Button variant="outline" size="sm" disabled>Cambiar contraseña</Button>
          </div>
        </CardContent>
      </Card>
    </div>
  </div>
</Layout>

<script>
  // Lógica para reenviar el correo si el botón existe
  const resendBtn = document.getElementById('resend-btn') as HTMLButtonElement | null;
  
  resendBtn?.addEventListener('click', async () => {
    resendBtn.disabled = true;
    resendBtn.textContent = 'Enviando...';
    
    try {
      // Llamamos a nuestro endpoint de backend (que crearemos a continuación)
      const res = await fetch('/api/auth/resend-verification', { method: 'POST' });
      if (res.ok) {
        alert('Correo enviado con éxito. Revisa tu bandeja de entrada.');
        resendBtn.textContent = 'Enviado';
      } else {
        throw new Error();
      }
    } catch (e) {
      alert('Error al enviar el correo. Inténtalo más tarde.');
      resendBtn.disabled = false;
      resendBtn.textContent = 'Reenviar email';
    }
  });
</script>